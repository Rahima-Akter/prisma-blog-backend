generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum PostStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

model Post {
  id         String     @id @default(uuid())
  title      String     @db.VarChar(100)
  content    String     @db.Text
  thumbnail  String?
  isFeatured Boolean    @default(false)
  status     PostStatus @default(PUBLISHED)
  tags       String[]
  views      Int        @default(0)
  authorId   String // better auth will provide
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  comments   Comments[]

  @@index([authorId]) // this will help to find all the posts posted by the author
  @@map("posts") // this will change the table name to posts on the db but here the model name won't change
}

enum CommentStatus {
  APPROVED
  REJECT
}

model Comments {
  id              String        @id @default(uuid())
  comment         String        @db.Text
  userId          String
  postId          String
  post            Post          @relation(fields: [postId], references: [id])
  commentParentId String?
  commentParent   Comments?     @relation("CommentReplies", fields: [commentParentId], references: [id])
  replies         Comments[]    @relation("CommentReplies")
  status          CommentStatus @default(APPROVED)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@index([postId, userId]) // to get all comments for a post
}
